<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dhairya.note1.NoteItemClickActivity"
    tools:showIn="@layout/activity_note_item_click">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cnic_title_txtv"
    android:text="Title"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:id="@+id/cnic_title_edtxt"
    app:layout_constraintTop_toBottomOf="@+id/cnic_title_txtv"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cnic_notecontent_txtv"
    app:layout_constraintTop_toBottomOf="@+id/cnic_title_edtxt"
    android:text="Note"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/cnic_notecontent_edtxt"
        app:layout_constraintTop_toBottomOf="@+id/cnic_notecontent_txtv"
        tools:layout_editor_absoluteX="8dp" />
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/cnic_save_btn"
        app:layout_constraintTop_toBottomOf="@+id/cnic_notecontent_edtxt"
        android:text="SAVE CHANGES"
        tools:layout_editor_absoluteX="8dp" />
    <Button
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:id="@+id/cnic_delete_btn"
        app:layout_constraintTop_toBottomOf="@+id/cnic_save_btn"
        android:text="DELETE"
        tools:layout_editor_absoluteX="8dp" />



</android.support.constraint.ConstraintLayout>
